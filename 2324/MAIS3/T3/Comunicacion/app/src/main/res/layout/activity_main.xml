<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.activity.MainActivity">


    <TextView
        android:id="@+id/textoSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto del saludo"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicial"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:entries="@array/perfiles"
        android:layout_marginTop="12dp"
        android:id="@+id/spinnerMarca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textoPerfil"
        app:layout_constraintStart_toStartOf="@+id/textoSaludo"
        app:layout_constraintTop_toBottomOf="@+id/textoPerfil" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerModelos"
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMarca" />

</androidx.constraintlayout.widget.ConstraintLayout>