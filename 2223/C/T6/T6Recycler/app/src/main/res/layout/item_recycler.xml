<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/imagen_recycler"
        android:layout_width="125dp"
        android:layout_height="175dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombre_recycler"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagen_recycler"
        app:layout_constraintTop_toTopOf="@+id/imagen_recycler" />

    <TextView
        android:id="@+id/detalle_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_recycler"
        app:layout_constraintEnd_toEndOf="@+id/nombre_recycler"
        app:layout_constraintStart_toStartOf="@+id/nombre_recycler"
        app:layout_constraintTop_toBottomOf="@+id/nombre_recycler" />

</androidx.constraintlayout.widget.ConstraintLayout>